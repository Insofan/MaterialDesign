<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#7b4dfd</item>

        //Color of the menu item text
        <item name="android:textColor">@android:color/black</item>
        //Menu item background color
        <item name="android:itemBackground">@color/colorWhite</item>

    </style>
    
    <style name="ToolBarTheme" parent = "Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <!--<item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <!--Tab bar theme-->
    <style name="TabBarTheme" parent = "Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">#A4EEF4</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <!--<item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>
    
    <!--Button theme-->
    <style name="CardButtonTheme" parent = "Theme.AppCompat">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:textAllCaps">false</item>
         <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:textColorSecondary">#A4EEF4</item>-->
    </style>
</resources>
