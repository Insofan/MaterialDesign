<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.example.mymaterialdesign.CardFragment">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="45.6%"
        app:layout_widthPercent="95.6%"
        app:layout_marginTopPercent = "2%"
        app:layout_marginLeftPercent = "2.2%"
        android:background="@color/colorPrimary"
        >

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:text="Title here"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_widthPercent="29.08%"
            app:layout_heightPercent="14.04%"
            app:layout_marginTopPercent = "9.55%"
            app:layout_marginLeftPercent = "4.6%"
            />

            <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/colorSecondText"
            android:text="11-02-2017"
            android:textAlignment="textStart"
            android:textSize="12sp"
            app:layout_widthPercent="29.08%"
            app:layout_heightPercent="14.04%"
            app:layout_marginTopPercent = "24.16%"
            app:layout_marginLeftPercent = "4.6%"
            />

            <Button
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Button 1"
                app:theme="@style/CardButtonTheme"
                app:layout_widthPercent="21.4%"
            app:layout_heightPercent="24.6%"
            app:layout_marginTopPercent = "74.9%"
            app:layout_marginLeftPercent = "4.6%"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button 2"
                app:theme="@style/CardButtonTheme"
                app:layout_widthPercent="21.4%"
                app:layout_heightPercent="24.6%"
                app:layout_marginTopPercent = "74.9%"
                app:layout_marginLeftPercent = "27%"
                />

            <ImageView
                android:layout_width="0dp"
            android:layout_height="0dp"
                android:src="@drawable/img_flower"
                android:scaleType="fitXY"
                app:layout_widthPercent="46.44%"
                app:layout_heightPercent="70.22%"
                app:layout_marginTopPercent = "7.02%"
                app:layout_marginLeftPercent = "48.85%"
                android:background="@color/colorWhite"
                />
        </android.support.percent.PercentFrameLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="41.7%"
        app:layout_widthPercent="41.7%"
        app:layout_marginTopPercent = "51.2%"
        app:layout_marginLeftPercent = "4.4%"
        android:background="@color/colorPrimary"
        >
        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorSecondText"
                android:contentDescription=""
                android:scaleType="fitXY"
                android:src="@drawable/img_bear"
                app:layout_heightPercent="85%"
                app:layout_widthPercent="100%" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"
                app:layout_heightPercent="15%"
                app:layout_widthPercent="100%">

                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme"
                 />

            </LinearLayout>

        </android.support.percent.PercentFrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="41.7%"
        app:layout_marginLeftPercent="54.0%"
        app:layout_marginTopPercent="51.2%"
        app:layout_widthPercent="41.7%">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorSecondText"
                android:scaleType="fitXY"
                android:src="@drawable/img_tree"
                app:layout_heightPercent="85%"
                app:layout_widthPercent="100%" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                app:layout_heightPercent="15%"
                app:layout_widthPercent="100%">

                <Button
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:background="@drawable/img_heart"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_width="21dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/img_bookmark"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/img_share"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

            </LinearLayout>

        </android.support.percent.PercentFrameLayout>

    </android.support.v7.widget.CardView>


</android.support.percent.PercentFrameLayout>
