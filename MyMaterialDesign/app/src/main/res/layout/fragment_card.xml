<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.example.mymaterialdesign.CardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="@dimen/dimen_card_1_width"
        android:layout_height="@dimen/dimen_card_1_height"
        android:layout_marginLeft="@dimen/dimen_card_1_margin_left"
        android:layout_marginTop="@dimen/dimen_card_1_margin_top"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="@dimen/dimen_card_1_title_width"
            android:layout_height="@dimen/dimen_card_1_title_height"
            android:layout_marginTop="@dimen/dimen_card_1_title_margin_top"
            android:layout_marginLeft="@dimen/dimen_card_1_title_margin_left"
            android:gravity="center"
            android:text="Title here"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="@dimen/dimen_card_1_title_width"
            android:layout_height="@dimen/dimen_card_1_title_height"
            android:layout_marginTop="@dimen/dimen_card_1_sub_title_margin_top"
            android:layout_marginLeft="@dimen/dimen_card_1_title_margin_left"
            android:text="11-02-2017"
            android:textAlignment="textStart"
            android:textColor="@color/colorSecondText"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/card_button_1"
            android:layout_width="@dimen/dimen_card_1_button_width"
            android:layout_height="@dimen/dimen_card_1_button_height"
            android:layout_marginLeft="@dimen/dimen_card_1_button_1_margin_left"
            android:layout_marginTop="@dimen/dimen_card_1_button_margin_top"
            android:background="@color/colorAccent"
            android:text="Alpha"
            app:theme="@style/CardButtonTheme" />

        <Button

            android:id="@+id/card_button_2"
            android:layout_width="@dimen/dimen_card_1_button_width"
            android:layout_height="@dimen/dimen_card_1_button_height"
            android:layout_marginLeft="@dimen/dimen_card_1_button_2_margin_left"
            android:layout_marginTop="@dimen/dimen_card_1_button_margin_top"
            android:gravity="center"
            android:background="@drawable/button_ripple_effect"
            android:text="Ripple"
            app:theme="@style/CardButtonTheme" />

        <ImageView
            android:layout_width="@dimen/dimen_card_1_imageView_width"
            android:layout_height="@dimen/dimen_card_1_imageView_height"
            android:layout_marginTop="@dimen/dimen_card_1_imageView_margin_top"
            android:layout_marginLeft="@dimen/dimen_card_1_imageView_margin_left"
            android:background="@color/colorWhite"
            android:scaleType="fitXY"
            android:src="@drawable/img_flower" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_heightPercent="41.7%"
        app:layout_marginLeftPercent="4.4%"
        app:layout_marginTopPercent="51.2%"
        app:layout_widthPercent="41.7%">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_ripple_effect">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorSecondText"
                android:contentDescription=""
                android:scaleType="fitXY"
                android:src="@drawable/img_tree"
                app:layout_heightPercent="85%"
                app:layout_widthPercent="100%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <Button
                    android:id="@+id/card_2_favorite_button"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_favorite_border"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:id="@+id/card_2_bookmark_button"
                    android:layout_width="21dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_bookmark_border"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_share"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

            </LinearLayout>

        </android.support.percent.PercentFrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_ripple_effect"
        app:layout_heightPercent="41.7%"
        app:layout_marginLeftPercent="54.0%"
        app:layout_marginTopPercent="51.2%"
        app:layout_widthPercent="41.7%">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorSecondText"
                android:scaleType="fitXY"
                android:src="@drawable/img_bear"
                app:layout_heightPercent="85%"
                app:layout_widthPercent="100%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <Button
                    android:id="@+id/card_3_favorite_button"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_favorite_border"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:id="@+id/card_3_bookmark_button"
                    android:layout_width="21dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_bookmark_border"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

                <Button
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_share"
                    android:backgroundTint="@color/colorSecondText"
                    android:gravity="bottom"
                    android:theme="@style/CardButtonTheme" />

            </LinearLayout>

        </android.support.percent.PercentFrameLayout>

    </android.support.v7.widget.CardView>


</android.support.percent.PercentFrameLayout>
