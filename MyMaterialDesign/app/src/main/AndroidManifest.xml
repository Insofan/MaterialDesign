<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymaterialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_material_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_material_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

         <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:fitsSystemWindows="true"
            android:launchMode="singleTop"
            >
        </activity>



        <activity
            android:name=".BottomNavActivity"
            android:label="Bottom Activity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".CollpaseActivity"
            android:label="Collpase Activity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".AboutMeActivity"
            android:label="About me Activity"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>